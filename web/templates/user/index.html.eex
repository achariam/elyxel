<h2>Listing users</h2>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Password hash</th>
      <th>Role</th>
      <th>Confirmed at</th>
      <th>Confirmation token</th>
      <th>Confirmation sent at</th>
      <th>Reset token</th>
      <th>Reset sent at</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for user <- @users do %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.username %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.password_hash %></td>
      <td><%= user.role %></td>
      <td><%= user.confirmed_at %></td>
      <td><%= user.confirmation_token %></td>
      <td><%= user.confirmation_sent_at %></td>
      <td><%= user.reset_token %></td>
      <td><%= user.reset_sent_at %></td>

      <td class="text-right">
        <%= link "Show", to: user_path(@conn, :show, user), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: user_path(@conn, :edit, user), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: user_path(@conn, :delete, user), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New user", to: user_path(@conn, :new) %>
