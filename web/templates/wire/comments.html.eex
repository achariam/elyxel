<div class="comments">
  <%= for comment <- @comments do %>
    <div class="comment-text">
      <p> <%= markdown(comment.content) %> </p>
      <p class="small">
        <a href ="<%= user_path(@conn, :show, comment.user_id) %>"><%= comment.user.username %></a>
        &middot;
        <%= simple_time comment.inserted_at %>
      </p>
    </div>
  <% end %>
</div>